<?xml version="1.0" encoding="utf-8"?>
<XTC>
	<name>Default</name>
	<description>Default Typography</description>
   <params>
		<param name="direction" type="radio" default="ltr" label="Text Direction" description="Choose the text direction for the template." >
			<option value="ltr">LTR</option>
			<option value="rtl">RTL</option>
		</param>
		<param name="body_fontSize" type="text" default="11" label="Global Font Size" description="Set The Body/Global Font Size" />
		<param name="body_fontFamily" type="text" default="Arial" label="Global Font Family" description="Select The Global Font Family" />
		<param name="comHead_fontSize" type="text" default="18" label="Component Font Size" description="Set The Component Heading Font Size. Affects only .componentheading, will not change all component heads" />
		<param name="comHead_fontFamily" type="text" default="Arial" label="Component Heading Font Family" description="Set The Component Heading Font Family" />
		<param name="conHead_fontSize" type="text" default="14" label="Content Heading Font Size" description="Set The Content Heading Font Size. Affects only .contentheading, will not change all content heads" />
		<param name="conHead_fontFamily" type="text" default="Arial" label="Content heading Font Family" description="Set The Content Heading Font Family" />
		<param name="modHead_fontSize" type="text" default="14" label="Module Title Font Size" description="Set The Mod Title Size" />
		<param name="cfonts" type="radio" default="1" label="Use Cufon Fonts" description="Enable or Disable Cufon fonts calls." >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="gfonts" type="radio" default="1" label="Use Google Fonts" description="Enable or Disable Google fonts calls." >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		 <param name="linkSize" type="list" default="12" label="Link Font Size" description="Link Font Size">
